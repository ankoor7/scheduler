  <h2>Users</h2>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% users.each do |user| %>
      <tr>
        <td><%= link_to "#{user.name} #{user.surname}", user %> </td>
        <td><%=user.email %></td>
        <td><%=user.role %></td>
        <td><%= link_to 'edit', edit_person_path(user) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
