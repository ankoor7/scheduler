  <h2>Teaching Schedule</h2>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Date</th>
        <th>Time</th>
        <th>Title</th>
        <th>Room</th>
        <th>Assignment</th>
        <th>Material</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% events_as_teacher.each do |event| %>
      <tr>
        <td><%=event.scheduled_date %></td>
        <td><%= timeslots.find(event.time_slot.to_i).first.name %></td>
        <td><%= link_to event.name, event %></td>
        <td><%=event.room.name %></td>
        <td>
          <% if event.assignment %>
            <%=link_to event.assignment.name, edit_assignment_path(event.assignment) %>
          <% else %>
            <%= link_to 'add assignment', new_assignment_path %>
          <% end %>
        </td>
        <td>
          <% if event.material %>
            <%=link_to 'edit material', edit_material_path(event.material) %>
          <% else %>
            <%= link_to 'add material', new_material_path %>
          <% end %>
        </td>
        <td><%= link_to 'edit', edit_event_path(event) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
